List_Draf searchListDraf(List_Draf drafUser[], char User) {
    int i = 0;
    while (User(drafUser[i]) != User) {
        i++;
    }
    
    return drafUser[i];
}

void CreateListDraf(int currUser) {
    List_Draf listDraf;
    Stack stackDraf;


    CreateEmpty(&stackDraf);
    User(listDraf) = 'B';
    List(listDraf) = stackDraf;    

    drafUser[currUser] = listDraf;
}

void BuatDraf(List_Draf* LD) {
    Draf d;
    printf("Masukkan draf:\n");
    scanf("%s", input);

    d = buatdraf();

    printf("Apakah anda ingin menghapus, menyimpan, atau menerbitkan draf ini?\n");
    scanf("%s", input);

    if (strcmp(input, "HAPUS") == 0) {
        HapusDraf(LD);
    } else if (strcmp(input, "TERBIT") == 0) {
        TerbitDraf(LD, d);
    } else if (strcmp(input, "EDIT") == 0) {
        EditDraf(LD);
    }
}

